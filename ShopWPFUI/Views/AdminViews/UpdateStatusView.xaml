        <ListView  x:Name="OrdersListView" ItemsSource="{Binding CurrentListOrders}"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        Grid.Column="0" Grid.ColumnSpan="3"
                        Grid.Row="2" Margin="10, 0, 10, 0" 
                        Background="Transparent"
                        BorderThickness="0"
                        SelectedItem="{Binding SelectedOrder}">


            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.View>
                <GridView ColumnHeaderContainerStyle="{StaticResource GridViewColumnHeaderStyle1}" ScrollViewer.VerticalScrollBarVisibility="Auto">


                    <GridViewColumn Header="Адрес доставки ">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Margin="0" Text="{Binding Address.Address}" 
                                        Foreground="#DBDBDB" FontSize="15"
                                           TextWrapping="Wrap"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <GridViewColumn Header="Дата оформления"
                                Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Margin="0" Text="{Binding OrderPlaced, StringFormat=dd.MM.yyyy HH:mm}" 
                                        Foreground="#DBDBDB" FontSize="15"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    

                    <GridViewColumn Header="Дата Завершения" 
                                Width="{Binding WidthOrderFulfilledColumn}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Margin="5 0" Text="{Binding OrderFulfilled,  StringFormat=dd.MM.yyyy HH:mm}" 
                                        Foreground="#DBDBDB" FontSize="15"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Заказчик" 
                                Width="Auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Margin="5 0" Text="{Binding Customer.FirstName}" 
                                        Foreground="#DBDBDB" FontSize="15"/>
                                    <TextBlock Margin="5 0" Text="{Binding Customer.LastName}" 
                                        Foreground="#DBDBDB" FontSize="15"/>

                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Номер" 
                                Width="auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Margin="5 0" Text="{Binding Customer.Phone}" 
                                        Foreground="#DBDBDB" FontSize="15"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Сумма" 
                                Width="Auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Margin="5 0" Text="{Binding Price}" 
                                        Foreground="#DBDBDB" FontSize="15"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>


                    <GridViewColumn Header="Cтатус"
                                Width="Auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Margin="5 0" Text="{Binding Status.Status}" 
                                        Foreground="#DBDBDB" FontSize="15"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="" 
                                Width="Auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content=" 〉" Command="{Binding ElementName=OrdersListView, 
                                Path= DataContext.SetNextStatusCommand}"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Действия">
                        <GridViewColumn.CellTemplate> 
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    
                                    <!--<Button Command="{Binding ElementName=OrdersListView, 
                                            Path= DataContext.EditProductCommand}">
                                        <Grid>
                                            <Image Source="/Images/img_customer.png"
                                                   Style="{StaticResource Image_Style}" />
                                        </Grid>
                                    </Button>-->

                                    <Button Margin="5" Content="Подробнее" Command="{Binding ElementName=OrdersListView, 
                                Path= DataContext.CreateExcelReportCommand}"/>
                                    <Button Margin="5"  Content="Отчет" Command="{Binding ElementName=OrdersListView, 
                                Path= DataContext.CreateExcelReportCommand}"/>
                                    <Button Margin="5"  Content="Отменить" Command="{Binding ElementName=OrdersListView, 
                                Path= DataContext.CancelOrderCommand}"/>
                                    
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>

            <ListView.Resources>
                <Style TargetType="ListViewItem">
                    <Style.Triggers >

                        <EventTrigger RoutedEvent="MouseLeftButtonDown"/>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="IsSelected" Value="True" />
                        </Trigger>

                    </Style.Triggers>
                </Style>
            </ListView.Resources>
        </ListView>

    </Grid>
</UserControl>
