                        Margin="0,12,0,12" />



        <TextBlock Text ="Заказы" 
                   Foreground="#DBDBDB" 
                   Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                   Margin="10" FontSize="22"/>



