<UserControl x:Class="ShopWPFUI.CustomControls.ProductControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShopWPFUI.CustomControls"
             mc:Ignorable="d" 
             Width="160" Height="240">

    <Border Margin="10" Width="160" Height="240">
        <StackPanel>
            <Border Width="150" Height="150" CornerRadius="5" >
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="1"/>
                </Border.Effect>
                <Border.Background>
                    <ImageBrush ImageSource="{Binding Image}"/>
                </Border.Background>
            </Border>
            <TextBlock Margin="5 0" Text="Имя продукта" 
                                        Foreground="#DBDBDB" FontSize="15"/>
            <TextBlock Margin="5 0"
                                        Foreground="#DBDBDB" FontSize="15">
                <Run Text="100"/>
                <Run Text="₽"/>
            </TextBlock>
            <Button Command="{Binding AddToCartCommand}"
                                Content="В корзину" HorizontalAlignment="Center" Margin="8">

            </Button>
        </StackPanel>
    </Border>

</UserControl>
